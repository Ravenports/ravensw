   for Source_Dirs use ("src/**");
   for Object_Dir use "obj";
   for Main use ("main.adb");
   for Languages use ("Ada", "C");

   package Compiler is
      for Switches ("ada") use ("-gnatyabABcdefiIklnOptx", "-gnatyM100", "-fstack-check");
   end Compiler;

   package Linker is
      for Switches ("ada") use ("-L/raven/lib", "-lucl_pic", "-lm", "-lelf_pic", "-L../external/sqlite", "-lsqlite_pic");
   end Linker;

end Ravensw;

